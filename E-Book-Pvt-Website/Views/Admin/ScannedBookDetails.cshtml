@model E_Book_Pvt_Website.Models.Book

@{
    ViewData["Title"] = "Scanned Book Details";
}

@if (Model != null)
{
    <h2>Scanned Book Details</h2>

    <div class="card">
        <div class="card-header">
            <h3>@Model.book_title</h3>
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> @Model.book_id</p>
            <p><strong>Author ID:</strong> @Model.book_author_id</p>
            <p><strong>Category:</strong> @Model.book_category</p>
            <p><strong>Description:</strong> @Model.book_description</p>
            <p><strong>Publisher:</strong> @Model.book_publisher</p>
            <p><strong>Price:</strong> $@Model.book_price</p>
            <p><strong>ISBN:</strong> @Model.book_ISBN</p>
            <p><strong>Quantity:</strong> @Model.book_quantity</p>
            <p><strong>Image:</strong></p>
            @if (Model.book_image != null && Model.book_image.Length > 0)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.book_image)" alt="Book Image" class="img-thumbnail" style="max-width: 200px;" />
            }
            else
            {
                <p>No image available</p>
            }
        </div>
    </div>
}
else
{
    <p>No book details available.</p>
}

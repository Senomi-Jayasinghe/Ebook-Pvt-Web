@model E_Book_Pvt_Website.Models.AdminLoginModal

@{
    ViewData["Title"] = "AdminLogin";
}

<div class="container d-flex align-items-center justify-content-between vh-100">
    <!-- Form Section -->
    <div class="form-section bg-white rounded-3 shadow-lg p-5" style="width: 45%;">
        <h3 class="mb-4">Admin Login</h3>
        <form asp-action="AdminLogin" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" type="password" class="form-control" required />
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <button type="submit" class="btn btn-primary btn-block w-100">Login</button>
        </form>
    </div>

    <!-- Image Section -->
    <div class="image-section" style="width: 50%; text-align: center;">
        <img src="~/Assets/BOOKS.jpg" asp-append-version="true" alt="Login Illustration" class="img-fluid rounded-3 shadow-lg" />
    </div>
</div>

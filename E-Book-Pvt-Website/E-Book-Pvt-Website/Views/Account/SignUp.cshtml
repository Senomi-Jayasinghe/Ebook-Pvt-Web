@model E_Book_Pvt_Website.Models.CustomerSignUpViewModel

@{
    ViewData["Title"] = "SignUp Page";
}

<div class="container d-flex align-items-center justify-content-between vh-auto">
    <!-- Form Section -->
    <div class="form-section bg-white rounded-3 shadow-lg p-5 m-2" style="width: 45%;">
        <h3 class="mb-4">Sign Up</h3>
        <form asp-action="SignUp" method="post">
            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email:</label>
                <input asp-for="Email" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Name" class="form-label">Name:</label>
                <input asp-for="Name" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="PhoneNumber" class="form-label">Phone No:</label>
                <input asp-for="PhoneNumber" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="Address" class="form-label">Address:</label>
                <textarea asp-for="Address" class="form-control" required></textarea>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password:</label>
                <input asp-for="Password" type="password" class="form-control" required />
            </div>
            <div class="form-group mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password:</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" required />
            </div>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <button type="submit" class="btn btn-primary btn-block w-100">Sign Up</button>
        </form>
    </div>

    <!-- Image Section -->
    <div class="image-section" style="width: 50%; text-align: center;">
        <img src="~/Assets/BOOKS.jpg" asp-append-version="true" alt="Login Illustration" class="img-fluid rounded-3 shadow-lg" />
    </div>
</div>

@model E_Book_Pvt_Website.Models.Author

@{
    ViewData["Title"] = "DeleteAuthor";
}

<h1>Delete Author</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Author Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.author_name)
        </dd>
    </dl>

    <form asp-action="DeleteAuthorConfirmed" method="post">
        <input type="hidden" asp-for="author_id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="AuthorList" class="btn btn-secondary">Back to List</a>
    </form>
</div>
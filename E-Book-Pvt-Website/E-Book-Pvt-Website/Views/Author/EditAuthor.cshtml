@model E_Book_Pvt_Website.Models.Author

@{
    ViewData["Title"] = "EditAuthor";
}

<h1>Edit Author</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAuthor">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="author_id" />
            <div class="form-group">
                <label asp-for="author_name" class="control-label">Author Name</label>
                <input asp-for="author_name" class="form-control" />
                <span asp-validation-for="author_name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="AuthorList">Back to List</a>
</div>

